	private void addCustomerNotification() {
		try {
			MvcResult result = this.mockMvc.perform(post("/rest/saveCustomerData")
				 .contentType("application/json").header("Authorization", "Basic " + Base64.getEncoder().encodeToString("ashish:ashish".getBytes()))
				 .content(addCustomerNotificationJson)
				).andExpect(status().isOk())
				.andExpect(content().contentType("application/json"))
				.andReturn();
			
			UIModel uiModel = getUIModel(result, "outputJson/retail/branch/customer/addCustomerNotification.json");
			
		} catch(Exception e) {
			logger.error("Error while adding an account", e);
			Assert.fail("Error while adding an account");
		}
	}
	
